.unity-list-view {
    width: 100%;
    height: 70%;
}

.unity-list-view__item {
    padding: 5px;
    border-bottom-width: 1px;
    border-bottom-color: gray;
}

.teacher-item {
    flex-direction: row;
    justify-content: space-between;
    font-size: 18px;
    padding: 5px 10px;
    -unity-text-align: middle-left;
}

.teacher-label {
    padding: 5px;
}

.teacher-toggle {
    margin-right: 10px;
}
